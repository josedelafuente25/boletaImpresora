<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlackTextTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="NumberButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">@dimen/margin_number_button</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/background_number_button</item>
        <item name="android:textSize">@dimen/size_text_number_button</item>
    </style>

    <style name="OperatorButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">@dimen/margin_number_button</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/background_operator_button</item>
        <item name="android:textSize">@dimen/size_text_number_button</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextViewValor" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_size_valor_total</item>
        <item name="android:gravity">right|bottom</item>
    </style>

    <style name="CyanButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">@dimen/padding_button</item>
        <item name="android:paddingLeft">@dimen/padding_button</item>
    </style>

    <style name="OrangeButton" parent="android:Widget.Button">
        <item name="android:layout_margin">@dimen/margin_number_button</item>
        <item name="android:background">@color/colorOrange</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ImageButton" parent="android:Widget.ImageButton">
        <item name="android:layout_margin">@dimen/margin_number_button</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Title" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LogInButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/login_button_rounded_corners</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
